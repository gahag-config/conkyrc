-- Config by gahag.

conky.config = {
    update_interval = 1.0
  , total_run_times = 0
  , cpu_avg_samples = 2
    
  , double_buffer = true
  
  
  -- Text:
  , use_xft = true
  , font = 'Monospace:size=8'
  , override_utf8_locale = false
  
  
  -- Color:
  , color1 = '0090FC'
  , color2 = 'FCFCFC'
  
  
  -- Window:
  , own_window             = true
  , own_window_type        = 'normal'
  , own_window_transparent = true
  , own_window_hints       = 'undecorated,below,sticky,skip_taskbar,skip_pager'
  , own_window_argb_visual = true
  , own_window_argb_value  = 100
  , own_window_class       = conky_semi
  , own_window_class       = normal
  
  , alignment = 'top_right'
  
  , gap_x = 5
  , gap_y = 0
  
  , minimum_height = 310
  , minimum_width  = 110
  , maximum_width  = 310
  
  
  -- Graphics:
  , draw_shades        = false
  , draw_outline       = false
  , draw_borders       = false
  , draw_graph_borders = true
}


conky.text = [[
${color1}System${hr 2}
 ${color2}CPU
  Core 1: ${cpu cpu1}% ${alignr}${cpubar cpu1 7,180 EEEEEE}
  Core 2: ${cpu cpu2}% ${alignr}${cpubar cpu2 7,180 EEEEEE}
  Core 3: ${cpu cpu3}% ${alignr}${cpubar cpu3 7,180 EEEEEE}
  Core 4: ${cpu cpu4}% ${alignr}${cpubar cpu4 7,180 EEEEEE}
 
 RAM $alignc $mem / $memmax $alignr $memperc%
  $membar
 
 SWAP $alignc $swap / $swapmax $alignr $swapperc%
  $swapbar

${color1}Processes${hr 2}
 ${color2}$processes processes ($running_processes running)    
 NAME $alignr PID   CPU   MEM
 ${top name 1}$alignr ${top pid 1}${top cpu 1}${top mem 1}
 ${top name 2}$alignr ${top pid 2}${top cpu 2}${top mem 2}
 ${top name 3}$alignr ${top pid 3}${top cpu 3}${top mem 3}
 ${top name 4}$alignr ${top pid 4}${top cpu 4}${top mem 4}
 ${top name 5}$alignr ${top pid 5}${top cpu 5}${top mem 5}
 ${top name 6}$alignr ${top pid 6}${top cpu 6}${top mem 6}
 ${top name 7}$alignr ${top pid 7}${top cpu 7}${top mem 7}
 ${top name 8}$alignr ${top pid 8}${top cpu 8}${top mem 8}
 ${top name 9}$alignr ${top pid 9}${top cpu 9}${top mem 9}
]]
