  Core 3 ${cpubar cpu3 7,310}                                         ${goto 430} root ${fs_used /} / ${fs_size /}                    ${goto 650}${top name 4}$alignr ${top pid 4}${top cpu 4}${top mem 4}
  Core 4 ${cpubar cpu4 7,310}                                         ${goto 430} ${fs_bar 7,160 /}                                   ${goto 650}${top name 5}$alignr ${top pid 5}${top cpu 5}${top mem 5}
 ${voffset 10}MEM                                                     ${goto 430}NET ${addrs wlp2s0}                                  ${goto 650}${top name 6}$alignr ${top pid 6}${top cpu 6}${top mem 6}
  MEM  $mem / $memmax ${membar 7,182}                                 ${goto 430} Up   ${upspeedf wlp2s0}k/s (${totalup wlp2s0})      ${goto 650}${top name 7}$alignr ${top pid 7}${top cpu 7}${top mem 7}
  SWAP $swap / $swapmax  ${swapbar 7,182}                             ${goto 430} Down ${downspeedf wlp2s0}k/s (${totaldown wlp2s0})  ${goto 650}${top name 8}$alignr ${top pid 8}${top cpu 8}${top mem 8}
